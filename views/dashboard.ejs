<body>
	<div class="join-container">
		<header class="join-header">
			<h1><i class="fas fa-smile"></i> ChatCord</h1>
			<%- include ("./partials/messages"); %>
		</header>
		<main class="join-main">
			<form action="/chat" class="form-control2">
				<div>
					<label for="room">Room name</label>
					<input
						type="text"
						name="room"
						id="room"
						placeholder="Enter room name..."
						required
					/>
					<input
						type="text"
						name="username"
						id="username"
						value=<%= name %>
						hidden
					/>
				</div>
				<button type="submit" class="btn">Join Room</button>
				
			</form>
			<form action="/dashboard" method="post" class="form-control2">
				<div>
					<label for="new_room_name">New Room</label>
					<input
						type="text"
						name="new_room_name"
						id="new_room_name"
						placeholder="Enter new room name..."
						required
					/>
				</div>
				<button type="submit" class="btn">Create Room</button>
			</form>
			<a href="/users/logout" class="btn btn-primary">Logout</a>

		</main>
	</div>
</body>



